{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "plugin": ["opencode-antigravity-auth@latest"],
  "autoupdate": "notify",
  "default_agent": "plan",
  "agent": {
    "build": {
      "mode": "all",
      "model": "openai/gpt-5.3-codex",
      "variant": "high"
    },
    "compaction": {
      "model": "openai/gpt-5.1-codex-mini"
    },
    "explore": {
      "model": "openai/gpt-5.1-codex-mini"
    },
    "general": {
      "model": "openai/gpt-5.3-codex",
      "variant": "low"
    },
    "plan": {
      "mode": "all",
      "model": "openai/gpt-5.3-codex",
      "variant": "xhigh",
      "permission": {
        "edit": {
          "*": "deny",
          ".agents/plans/**": "allow",
          ".opencode/plans/**": "allow",
          "docs/plans/**": "allow"
        }
      }
    },
    "summary": {
      "model": "opencode/big-pickle"
    },
    "title": {
      "model": "opencode/big-pickle"
    }
  },
  "lsp": {
    "biome": {
      "command": ["biome", "lsp-proxy"],
      "extensions": [
        ".ts",
        ".tsx",
        ".mts",
        ".cts",
        ".js",
        ".jsx",
        ".mjs",
        ".cjs",
        ".json",
        ".jsonc",
        ".css",
        ".html"
      ]
    },
    "nil": {
      "command": ["nil", "--stdio"],
      "extensions": [".nix"]
    },
    "nixd": {
      "disabled": true
    }
  },
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--search-parent-directories",
        "--stdin-filepath",
        "$FILE"
      ],
      "extensions": [".lua", ".luau"]
    },
    "markdownlint-cli2": {
      "command": ["markdownlint-cli2", "--fix", "$FILE"],
      "extensions": [".md", ".mdx"]
    }
  },
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        }
      }
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "username": "Ian"
}
