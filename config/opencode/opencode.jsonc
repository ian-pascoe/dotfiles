{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "plugin": ["opencode-antigravity-auth@latest"],
  "autoupdate": "notify",
  "permission": {
    "external_directory": {
      "*": "ask",
      // Allow global opencode config
      "~/.config/opencode/**": "allow"
    }
  },
  "agent": {
    // Default agents with some customizations
    "build": {
      "model": "openai/gpt-5.3-codex",
      "variant": "medium"
    },
    "plan": {
      "model": "openai/gpt-5.3-codex",
      "variant": "xhigh",
      "permission": {
        "edit": {
          "*": "deny",
          ".opencode/plans/**": "allow",
          ".agents/plans/**": "allow"
        }
      }
    },
    "explore": {
      "model": "openai/gpt-5.1-codex-mini",
      "permission": {
        "skill": "allow" // denied by default
      }
    },
    "general": {
      "model": "openai/gpt-5.3-codex",
      "variant": "medium"
    },
    // Custom agents
    "quick": {
      "model": "openai/gpt-5.3-codex",
      "variant": "low",
      "mode": "subagent",
      "description": "Optimized for speed and efficiency, ideal for simple tasks that require fast responses.",
      // Same as general
      "permission": {
        "todoread": "deny",
        "todowrite": "deny"
      }
    },
    "deep": {
      "model": "openai/gpt-5.3-codex",
      "variant": "xhigh",
      "mode": "subagent",
      "description": "Optimized for depth and thoroughness, ideal for complex tasks that require detailed analysis and comprehensive responses.",
      // Same as general
      "permission": {
        "todoread": "deny",
        "todowrite": "deny"
      }
    },
    "frontend": {
      "model": "google/antigravity-gemini-3.1-pro",
      "variant": "high",
      "mode": "all",
      "description": "Specialized in frontend development tasks, including HTML, CSS, and JavaScript. Provides expert-level assistance for building responsive and user-friendly interfaces.",
      // Same as general
      "permission": {
        "todoread": "deny",
        "todowrite": "deny"
      }
    },
    // Utility agents
    "summary": {
      "model": "opencode/big-pickle"
    },
    "title": {
      "model": "opencode/big-pickle"
    },
    "compaction": {
      "model": "openai/gpt-5.3-codex",
      "variant": "low"
    }
  },
  "lsp": {
    "biome": {
      "command": ["biome", "lsp-proxy"],
      "extensions": [
        ".ts",
        ".tsx",
        ".mts",
        ".cts",
        ".js",
        ".jsx",
        ".mjs",
        ".cjs",
        ".json",
        ".jsonc",
        ".css",
        ".html"
      ]
    },
    "nil": {
      "command": ["nil", "--stdio"],
      "extensions": [".nix"]
    },
    "nixd": {
      "disabled": true
    }
  },
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--search-parent-directories",
        "--stdin-filepath",
        "$FILE"
      ],
      "extensions": [".lua", ".luau"]
    },
    "markdownlint-cli2": {
      "command": ["markdownlint-cli2", "--fix", "$FILE"],
      "extensions": [".md", ".mdx"]
    }
  },
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3.1-pro": {
          "name": "Gemini 3.1 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-6": {
          "name": "Claude Sonnet 4.6 (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-opus-4-6-thinking": {
          "name": "Claude Opus 4.6 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3.1-pro-preview": {
          "name": "Gemini 3.1 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3.1-pro-preview-customtools": {
          "name": "Gemini 3.1 Pro Preview Custom Tools (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "username": "Ian"
}
