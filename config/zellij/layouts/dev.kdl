layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="zjstatus"
    }
  }
  tab name="dev" split_direction="vertical" {
    pane size="60%" split_direction="horizontal" {
      pane name="editor" size="70%" {
        command "nvim"
        args "."
      }
      pane name="cmd" size="30%" {
        command "zsh"
      }
    }
    pane name="agent" size="40%" {
      command "opencode"
      args "--port=56781"
    }
  }
  tab name="home" cwd="~" {
    pane name="cmd" {
      command "zsh"
    }
  }
  tab name="dotfiles" split_direction="vertical" cwd="~/.dotfiles" {
    pane size="60%" split_direction="horizontal" {
      pane name="editor" size="70%" {
        command "nvim"
        args "."
      }
      pane name="cmd" size="30%" {
        command "zsh"
      }
    }
    pane name="agent" size="40%" {
      command "opencode"
      args "--port=56782"
    }
  }
}

